{
  "name": "cursor-mcp-bridge",
  "displayName": "Cursor MCP Bridge",
  "description": "Bridge between MCP Server and Cursor IDE",
  "version": "1.0.0",
  "publisher": "mcp-bridge",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-mcp-bridge.connect",
        "title": "Connect to MCP Server"
      },
      {
        "command": "cursor-mcp-bridge.disconnect",
        "title": "Disconnect from MCP Server"
      },
      {
        "command": "cursor-mcp-bridge.status",
        "title": "MCP Bridge Status"
      },
      {
        "command": "mcp-bridge.send-to-chat",
        "title": "Send Message to Cursor AI Chat"
      },
      {
        "command": "mcp-bridge.trigger-agent",
        "title": "Trigger Cursor Auto Agent"
      },
      {
        "command": "mcp-bridge.get-history",
        "title": "Get Chat History"
      },
      {
        "command": "mcp-bridge.test-connection",
        "title": "Test MCP Connection"
      },
      {
        "command": "mcp-bridge.monitor-collaboration",
        "title": "Monitor AI Collaboration"
      }
    ],
    "chatParticipants": [
      {
        "id": "mcp-bridge.cursor-integration",
        "fullName": "MCP Bridge",
        "name": "mcp-bridge",
        "description": "Bridge between Claude Desktop and Cursor AI - enables AI-to-AI communication",
        "isSticky": true,
        "sampleRequest": "Send a message to Cursor AI or trigger the auto agent"
      }
    ]
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
} 